<h1>Login</h1>

<%= form_with(url: login_path, method: :post) do %>
  <div>
    <label for="email">Email</label>
    <%= text_field_tag :email %>
  </div>
  <div>
    <label for="password">Password</label>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag "Login" %>
  </div>
<% end %>
