<% if current_user %>
  <h1>New Place</h1>

  <%= form_with(model: @place, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit 'Create Place', class: 'btn btn-primary' %>
    </div>
  <% end %>
<% else %>
  <p>You must be logged in to create a new place.</p>
<% end %>
