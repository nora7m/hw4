<h1><%= @place.name %></h1>

<h2>My Entries</h2>
<% if @entries.any? %>
  <% @entries.each do |entry| %>
    <h3><%= entry.title %></h3>
    <h4><%= entry.occurred_on %></h4>
    <p><%= entry.description %></p>
  <% end %>
<% else %>
  <p>No entries found.</p>
<% end %>

<% if current_user %>
  <p>
    <%= link_to "New Entry", new_place_entry_path(@place) %>
  </p>
<% end %>

<p>
  <%= link_to "Back to All Places", places_path %>
</p>
