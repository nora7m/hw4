<h1><%= @place.name %></h1>

<h2>My Entries</h2>
<% if @entries.any? %>
  <div class="row">
    <% @entries.each do |entry| %>
      <div class="col-md-4 mb-3">
        <h3><%= entry.title %></h3>
        <h4><%= entry.occurred_on %></h4>
        <p><%= entry.description %></p>
        <% if entry.uploaded_image.attached? %>
          <%= image_tag entry.uploaded_image, class: 'img-fluid' %>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No entries found.</p>
<% end %>

<% if current_user %>
  <p>
    <%= link_to "New Entry", new_place_entry_path(@place), class: 'btn btn-primary' %>
  </p>
<% end %>

<p>
  <%= link_to "Back to All Places", places_path, class: 'btn btn-secondary' %>
</p>
