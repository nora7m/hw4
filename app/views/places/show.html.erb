<h1><%= @place.name %></h1>

<h2>My Entries</h2>
<% if @entries.any? %>
  <div class="row">
    <% @entries.each do |entry| %>
      <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= entry.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= entry.occurred_on %></h6>
            <p class="card-text"><%= entry.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No entries found.</p>
<% end %>

<% if current_user %>
  <p>
    <%= link_to "New Entry", new_place_entry_path(@place), class: 'btn btn-success' %>
  </p>
<% end %>

<p>
  <%= link_to "Back to All Places", places_path, class: 'btn btn-secondary' %>
</p>
